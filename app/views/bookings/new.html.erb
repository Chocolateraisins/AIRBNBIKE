<div class="banner" style="background-image: url('https://res.cloudinary.com/dxzgio39l/image/upload/o_65/v1542087044/new_bike.jpg');">

  <div class="banner-content">
    <h2>Book this bike!</h2>

    <%= simple_form_for [@bike, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.input :delivery_address %>
        <div class="form-actions btn btn-medium">
            <%= f.button :submit, "Book this bike" %>
          </div>
    <% end %>
  </div>

